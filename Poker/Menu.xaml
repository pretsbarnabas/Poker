<Page x:Class="Poker.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Poker"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="900"
      Title="Menu" Background="White">
    <Grid x:Name="gridMenu" Width="300" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="7*"></RowDefinition>

        </Grid.RowDefinitions>
        <Label Grid.Row="1" Content="Poker" FontSize="45" FontFamily="Comic Sans MS" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>
        <Button Grid.Row="3" Content="Play" FontSize="20" Click="Play"></Button>
        <Button Grid.Row="5" Content="Settings" FontSize="20" Click="Settings"></Button>
        <Button Grid.Row="7" Content="Close" FontSize="20" Click="Close"></Button>
        <StackPanel x:Name="SettingsPanel" Height="Auto" Width="200" Visibility="Collapsed" Orientation="Vertical" Background="Gray" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" Grid.RowSpan="7"></StackPanel>
    </Grid>
</Page>
